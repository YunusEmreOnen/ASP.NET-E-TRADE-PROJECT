@model ETicaretProject.Models.Account.LoginModels
@{
    ViewBag.Title = "Login";
}

<div class="row my-5">
    <div class="col-md-6 offset-md-3">
        @using (Html.BeginForm())
        {
            <div class="card card-default shadow crd text-white">
                <!-- card-header -->
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-3">
                            <h3><span class="fa fa-sign-in fa-2x"></span></h3>
                        </div>
                        <div class="col-md-9 text-right">
                            <h2>Giriş</h2>
                            <small style="color:red;">@TempData["Info"]</small> <br />
                            @if (string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                            {
                                <small style="color:red;">@ViewBag.ReError</small>

                            }
                            else
                            {
                                <small>Lütfen e-posta ve şifrenizi giriniz.</small>

                            }
                        </div>
                    </div>
                </div>
                <!-- card-body -->
                <div class="card-body">
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "E-posta", type = "email" })
                    </div>
                    <div class="form-group">
                        @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "password", type = "password" })
                    </div>
                </div>

                <!-- card-footer -->
                <div class="card-footer text-muted text-right">
                    <a href="~/Account/ForgotPassword" class="btn btn-warning">
                        <span class="fa fa-asterisk mr-1"></span>Şifremi Unuttum!
                    </a>
                    <button class="btn btn-success" type="submit">
                        <span class="fa fa-sign-in mr-1"></span>Giriş
                    </button>
                </div>
            </div>
        }
    </div>
</div>

