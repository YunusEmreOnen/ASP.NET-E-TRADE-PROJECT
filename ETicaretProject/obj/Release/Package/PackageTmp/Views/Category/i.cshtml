@model IEnumerable<ETicaretProject.DB.Categories>

@{
    ViewBag.Title = "Kategoriler";
}

<h2>Kategoriler</h2>

<p>
    @Html.ActionLink("Create New", "Edit")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Kategori Adı:")
        </th>
        <th>
            @Html.DisplayName("Üst Kategorisi")
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Name)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Categories2.Name)
    </td>
    <td>
    <td>
        <a class="btn btn-info" href="@Url.Action("Edit",new { id=item.Id })">Düzenle</a>

        <button type="button" onclick="DeleteProduct('@Url.Action("Delete",new { id=item.Id })')" class="btn btn-danger">Sil</button>
    </td>
</tr>
}

</table>
<script>
    function DeleteProduct(url) {
        if (confirm("Silmek istediğinize emin misiniz?")) {

            location.href = url;
        }
    }
</script>
