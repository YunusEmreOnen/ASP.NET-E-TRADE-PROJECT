
@{
    ViewBag.Title = "ŞifremiUnuttum";
}

<main>
    @using (Html.BeginForm())
    {
        <!-- content-start -->
        <div class="container">

            <div class="row my-5">
                <div class="col-md-6 offset-md-3">
                    <form>
                        <div class="card card-default shadow crd text-white">
                            <!-- card-header -->
                            <div class="card-header">
                                <div class="row">
                                    <div class="col-md-3">
                                        <h3><span class="fa fa-asterisk fa-2x"></span></h3>
                                    </div>
                                    <div class="col-md-9 text-right">
                                        <h2>Şifremi Unuttum</h2>
                                        <small style="color:red;">@ViewBag.MyError</small> <br />
                                        <small>Lütfen e-posta adresinizi giriniz.</small>
                                    </div>
                                </div>
                            </div>
                            <!-- card-body -->
                            <div class="card-body">
                                <div class="form-group">
                                    <input type="email" name="email" id="e-posta" placeholder="E-posta"
                                           class="form-control">
                                </div>
                            </div>

                            <!-- card-footer -->
                            <div class="card-footer text-muted text-right">
                                <button class="btn btn-success" type="submit">
                                    <span class="fa fa-send mr-1"></span>Gönder
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <!-- content-end -->
    }

</main>
